@using ExamineApp.Models;
@model List<Lesson>;
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<body>
    @{
        <a class="btn btn-primary" href="Registration" role="button">Yeni dərs qeydiyyatı</a>
        <table id="LessonTable" class="table table-striped" style="width:100%">
            <tr>
                <th>Id</th>
                <th>Dərsin kodu</th>
                <th>Dərsin adı</th>
                <th>Sinifi</th>
                <th>Müəllimin adı</th>
                <th>Müəllimin soyadı</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var lesson in Model)
            {
                <tr>
                    <td>@lesson.Id</td>
                    <td>@lesson.Code</td>
                    <td>@lesson.Name</td>
                    <td>@lesson.ClassNum</td>
                    <td>@lesson.TeacherName</td>
                    <td>@lesson.TeacherSurName</td>
                    <td>
                        <input value="Yenilə" type="button" class="btn btn-info" onclick="location.href='@Url.Action("Update", "Lesson", new {lesson.Id})'" />
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "Lesson", new {lesson.Id})" onclick="return confirm('Silmək istədiyinizə əmininizmi?');">
                            <input type="button" class="btn btn-warning" value="Sil">
                        </a>
                    </td>
                </tr>
            }
        </table>
    }

</body>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('#LessonTable').DataTable();
        });
    </script>
}

