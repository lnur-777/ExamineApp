@using ExamineApp.Models;
@model List<Pupil>;
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<body>
    @{
        <a class="btn btn-primary" href="Registration" role="button">Yeni şagird qeydiyyatı</a>
        <table id="PupilTable" class="table table-striped" style="width:100%">
            <tr>
                <th>Id</th>
                <th>Nömrəsi</th>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Sinifi</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var pupil in Model)
            {
                <tr>
                    <td>@pupil.Id</td>
                    <td>@pupil.Number</td>
                    <td>@pupil.Name</td>
                    <td>@pupil.SurName</td>
                    <td>@pupil.ClassNum</td>
                    <td>
                        <input value="Yenilə" type="button" class="btn btn-info" onclick="location.href='@Url.Action("Update", "Pupil", new {pupil.Id})'" />
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "Pupil", new {pupil.Id})" onclick="return confirm('Silmək istədiyinizə əmininizmi?');">
                            <input type="button" class="btn btn-warning" value="Sil">
                        </a>
                    </td>
                </tr>
            }
        </table>
    }

</body>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $('#PupilTable').DataTable();
        });
    </script>
}

